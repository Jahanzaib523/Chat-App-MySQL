<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rowSearchItself"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageContactRowSearch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/avatar"

        />

    <!--This is the online status dot, gonna look into changing its visibility on runtime-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/onlineStatusRowSearch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@color/color_primary"

        android:layout_below="@id/imageContactRowSearch"
        android:layout_alignRight="@+id/imageContactRowSearch"
        android:layout_alignEnd="@+id/imageContactRowSearch"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"

        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        />
    <TextView
        android:id="@+id/nameOfContactRowSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Contact"
        android:layout_toRightOf="@+id/imageContactRowSearch"
        android:layout_toEndOf="@+id/imageContactRowSearch"
        android:ellipsize="end"
        android:maxLines="1"

        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/genderAndAgeRowSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male, 20"
        android:layout_below="@+id/nameOfContactRowSearch"
        android:layout_toRightOf="@+id/imageContactRowSearch"
        android:layout_toEndOf="@+id/imageContactRowSearch"
        android:ellipsize="end"
        android:maxLines="1"

        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/color_grey"
        android:textSize="14dp"

        />


</RelativeLayout>